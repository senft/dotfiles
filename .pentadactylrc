set guioptions+=B

noremap <C-c> <C-v><C-c>
noremap <C-v> <C-v><C-v>

nnoremap j 5j
nnoremap k 5k

noremap J <C-p>
noremap K <C-n>

autocmd LocationChange .* js modes.passAllKeys = /(www|mail)\.google\.com/.test(buffer.URL)
autocmd LocationChange .* js modes.passAllKeys += /www\.google\.com\\reader/.test(buffer.URL)
