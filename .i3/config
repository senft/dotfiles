bindcode Mod4+Shift+17 move workspace 8
bindcode Mod4+Shift+18 move workspace 9
bindcode Mod4+Shift+19 move workspace 10

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left

        bindsym j               resize shrink left 50 px or 50 ppt
        bindsym Shift+j         resize grow   left 50 px or 50 ppt

        bindsym k               resize shrink down 50 px or 50 ppt
        bindsym Shift+k         resize grow   down 50 px or 50 ppt

        bindsym l               resize shrink up 50 px or 50 ppt
        bindsym Shift+l         resize grow   up 50 px or 50 ppt

        bindsym semicolon       resize shrink right 50 px or 50 ppt
        bindsym Shift+semicolon resize grow   right 50 px or 50 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink left 50 px or 50 ppt
        bindsym Shift+Left  resize grow   left 50 px or 50 ppt

        bindsym Down        resize shrink down 50 px or 50 ppt
        bindsym Shift+Down  resize grow   down 50 px or 50 ppt

        bindsym Up          resize shrink up 50 px or 50 ppt
        bindsym Shift+Up    resize grow   up 50 px or 50 ppt

        bindsym Right       resize shrink right 50 px or 50 ppt
        bindsym Shift+Right resize grow   right 50 px or 50 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod4+Shift+r mode "resize"

bar {
    status_command    conky
    position          top
    mode              dock
    workspace_buttons yes

	font -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso10646-1

    colors {
        background #151515
        statusline #ffffff

        #class             border  background text
        focused_workspace  #303030 #303030 #ffffff 
        active_workspace   #151515 #151515 #909090 
        inactive_workspace #151515 #151515 #909090 
        urgent_workspace   #151515 #ffffff #151515 
    }
}


# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

