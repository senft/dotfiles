# Disable built-in statusbar
workspace_bar no

# Disable focus follows mouse
focus_follows_mouse no

# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
#font --terminus-medium--normal--12------iso10646-1 

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod4

#
# Colors
#
# class        border  backgr. text
#bar.focused    #ca0000 #FFFFFF #000000
#bar.unfocused
#bar.urgent

#
# Workspaces
# 
workspace 1 term
workspace 2 www
workspace 3 im
workspace 4 dev
workspace 5 misc

# Assign applications to workspaces
assign Pidgin 3
assign Chrome 2
assign Eclipse 4
assign Vlc 5
assign feh ~
assign sun-awt-X11-XFramePeer ~

#
# Binds
#

# Application starter
bind Mod4+Shift+36 exec /usr/bin/urxvtc
bind Mod4+25 exec /usr/bin/chromium-browser
bind Mod4+32 exec /usr/bin/urxvtc -e 'ncmpcpp'
bind Mod4+53 exec /usr/bin/mpc toggle
bind Mod4+20 exec /usr/bin/mpd-osd
bind Mod4+33 exec /usr/bin/dmenu_run
bind Mod4+23 exec /usr/bin/dmenu_mpc

bind 101 exec ~/.sudo_video_brightnessdown.sh
bind 212 exec ~/.sudo_video_brightnessup.sh
bind 174 exec aumix -v -2
bind 176 exec aumix -v +2
bind 160 exec amixer -q set Master toggle

bind Mod4+Shift+29 exec /usr/bin/xscreensaver-command -lock 

# Toggle Headphone channel
bind Mod4+38 exec /usr/bin/amixer -q set Headphone toggle

# Volume Binds for mpd and Master
bind Mod4+Shift+82 exec mpc volume -5
bind Mod4+Shift+86 exec mpc volume +5
bind Mod4+82 exec aumix -v -2
bind Mod4+86 exec aumix -v +2

#
# i3 Binds
#

# Mod+Shift+q exits i3
bind Mod4+Shift+24 exit

# Mod+Shift+q restarts i3 inplace
bind Mod4+24 restart

# Mod+ESC kills the current client
bind Mod4+9 kill

# Fullscreen (Mod4+Enter)
bind Mod4+41 f

# Stacking (Mod4+s)
bind Mod4+39 s

# Tabbed (Mod4+t)
bind Mod4+28 T

# Default (Mod4+d)
bind Mod4+40 d

# Toggle tiling/floating of the current window (Mod1+Shift+Space)
bind Mod4+Shift+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating (Mod1+t)
bind Mod4+28 focus ft

# Focus (Mod4+j/k/l/;)
bind Mod4+43 h
bind Mod4+44 j
bind Mod4+45 k
bind Mod4+46 l

# Focus Container (Mod3+j/k/l/;)
#bind Mod4+43 wch
#bind Mod4+44 wcj
