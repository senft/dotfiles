# Disable borders
new_window 1pixel
workspace_layout tabbed
default_orientation horizontal

# Disable focus follows mouse
focus_follows_mouse no

# ISO 10646 = Unicode
font -*-terminus-medium-r-normal-*-12-*-*-*-*-*-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod4

# class                       border  backgr. text    indicator
client.focused                #151515 #303030 #FFFFFF #909090
client.focused_inactive       #151515 #303030 #909090 #151515
client.unfocused              #151515 #151515 #909090 #151515
client.urgent                 #151515 #FFFFFF #151515 #151515

# Assign applications to workspaces
assign [class="Pidgin"] im
assign [class="Xchat"] im
assign [class="Chrome"] www
assign [class="Firefox"] www
assign [class="Eclipse"] dev
assign [class="Vlc"] misc
assign [class="Thunderbird"] mail

for_window [class="Xfce4-notifyd"] floating enable border none
for_window [class="Pidgin"] floating enable
for_window [class="Desura"] floating enable
for_window [class="Speedcrunch"] floating enable
for_window [title="Colonists"] floating enable

