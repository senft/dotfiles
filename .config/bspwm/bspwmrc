#! /bin/sh

bspc config border_width                  1
bspc config window_gap                    30
bspc config split_ratio                   0.50
bspc config focus_follows_pointer         false
bspc config borderless_monocle            true
bspc config gapless_monocle               true
bspc config auto_cancel                   true
bspc config auto_alternate                false
bspc config ignore_ewmh_focus             true

bspc config focused_border_color          "#424d17"
bspc config normal_border_color           "#121212"
bspc config urgent_border_color           "#EF545F"
bspc config presel_border_color           "#705D22"
bspc config focused_private_border_color  "#88a1ba"
bspc config active_private_border_color   "#88a1ba"
bspc config normal_private_border_color   "#627a92"

bspc monitor -d term www dev misc msg 6 7 8

# set monocle layout for browser workspace
bspc desktop ^2 -l monocle

# bright
bspc config focused_border_color          "#fdf6e3"
bspc config normal_border_color           "#121212"

bspc rule -a                              Chromium desktop=^2
bspc rule -a                              Firefox desktop=^2
bspc rule -a                              Eclipse desktop=^3
bspc rule -a                              jetbrains-idea-ce desktop=^3
bspc rule -a                              Gimp desktop=^4
bspc rule -a                              Steam desktop=^4
bspc rule -a                              Skype desktop=^5
bspc rule -a                              Toplevel desktop=^4 floating=true
bspc rule -a                              Geary desktop=msg

# LSO
bspc rule -a lso-stream-VlcStreamRTP floating=false desktop=misc
bspc rule -a lso-runner-Peer floating=false desktop=misc
#bspc rule -a sun-awt-X11-XFramePeer floating=false desktop=misc

# PFS
bspc rule -a de-tudarmstadt-maki-simonstrator-peerfact-GUIRunner floating=true

#
# Autostart
#

compton &
urxvtc &
firefox &
tint2 &
xsetroot -cursor_name left_ptr &
xset m 1 0 &

unclutter -idle 3 &

xcmenu --daemon &

xscreensaver -no-splash &
dropbox start &
numlockx &
/home/jln/.config/bspwm/panel &

xflux -l "51.514115" -r 1 &

~/.bin/java_nonreparenting_wm_hack.sh &
