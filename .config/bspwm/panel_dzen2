#! /bin/sh
#
# Example panel for dzen2

source /home/jln/.config/bspwm/panel_colors

adaptive_centering=0
screen_width=$(sres -W)
NORMIFS=$IFS
FIELDIFS=':'
PADDING=' '

while getopts 'af:s:' opt ; do
    case "$opt" in
        a)
            adaptive_centering=1
            ;;
        f)
            font_family=$OPTARG
            ;;
        s)
            font_size=$OPTARG
            ;;
    esac
done

shift $((OPTIND - 1))

while read -r line ; do
    case $line in
        C*)
            # conky output
            sys_infos="${line#?}"
            ;;

        T*)
            # conky output
            time="${line#?}"
            ;;

        W*)
            # bspwm internal state
            wm_infos=""
            IFS=$FIELDIFS
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                case $item in
                    [OoFfUu]*)
                        # desktops
                        name=${item#?}

                        print=true
                        BG=$COLOR_BG
                        case $item in
                            O*)
                                # focused occupied desktop
                                FG=$COLOR_FOCUSED_OCCUPIED_FG
                                ;;
                            F*)
                                # focused free desktop
                                FG=$COLOR_FOCUSED_FREE_FG
                                ;;
                            U*)
                                # focused urgent desktop
                                FG=$COLOR_FOCUSED_URGENT_FG
                                ;;
                            o*)
                                # occupied desktop
                                FG=$COLOR_OCCUPIED_FG
                                #title="^ro(8x8)"
                                ;;
                            f*)
                                # free desktop
                                FG=$COLOR_FREE_FG
                                #print=false
                                ;;
                            u*)
                                # urgent desktop
                                FG=$COLOR_URGENT_FG
                                BG=$COLOR_URGENT_BG
                                ;;
                        esac
                        if  $print ; then
                            if [ "$name" = "term" ] ; then
                                wm_infos="${wm_infos}^fg(${FG})^bg(${BG})^ca(1, bspc desktop -f ${name})^ca(2, bspc window -d ${name})${PADDING}^i(/home/jln/.icons/xbm8x8/arch.xbm)${PADDING}^ca()^ca()^bg()^fg()"
                            else
                                wm_infos="${wm_infos}^fg(${FG})^bg(${BG})^ca(1, bspc desktop -f ${name})^ca(2, bspc window -d ${name})${PADDING}${name}${PADDING}^ca()^ca()^bg()^fg()"
                            fi
                        fi
                        ;;
                esac
                shift
            done
            IFS=$NORMIFS
            ;;
    esac

    set -- $(printf '%s\0%s\0%s' "$wm_infos" "$time" "$sys_infos" | sed 's/\^[a-z]\+([^)]*)//g' | xargs -0 txtw -f "$font_family" -s "$font_size")
    left_width=$1
    center_width=$2
    right_width=$3

    left_indent=0
    center_indent=$(((screen_width - center_width) / 2))
    right_indent=$((screen_width - right_width+10))

    printf "%s\n" "^pa($left_indent)$wm_infos^pa($center_indent)$time^pa($right_indent)$sys_infos"

done
