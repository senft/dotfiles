#
# bspwm hotkeys
#

# quit bspwm
super + shift + q
    pkill -x panel;bspc quit

# switch/move window to workspace
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# close window
super + Escape
    bspc window -c

# toggle window state (floating,fullscreen)
super + {space,f,shift+p,p}
    bspc window -t {floating,fullscreen,pseudo_tiled,private}

# toggle layout (tiled, monocle)
super + t
    bspc desktop -l next

## rotate desktop
super + Tab
    bspc desktop -R 90

super + {_,shift} + BackSpace
    bspc desktop -{B,E}

# focus window
super + h
    bspc window -f left || bspc window -f next || bspc window -f right
super + l
    bspc window -f right || bspc window -f prev || bspc window -f left
super + j
    bspc window -f down || bspc window -f up || bspc window -f next
super + k
    bspc window -f up || bspc window -f down || bspc window -f prev

# focus next/prev window
super + {n,shift+n}
    bspc window -f {next,prev}.floating || bspc window -f {next,prev}

# move window
super + shift + h
    bspc window -s left || bspc window -s right || xdo move -x -20
super + shift + l
    bspc window -s right || bspc window -s left || xdo move -x +20
super + shift + j
    bspc window -s down || bspc window -s up || xdo move -y +20
super + shift + k
    bspc window -s up || bspc window -s down || xdo move -y -20

# Resize window
super + ctrl + l
    bspc window -e right +40 || bspc window -e left +40 || xdo resize -w +40

super + ctrl + h
    bspc window -e right -40 || bspc window -e left -40 || xdo resize -w -40

super + ctrl + j
    bspc window -e down +40 || bspc window -e up +40 || xdo resize -h +40

super + ctrl + k
    bspc window -e down -40 || bspc window -e up -40 || xdo resize -h -40

# Preselect splitting area
alt + {h,j,k,l}
    bspc window -p {left,down,up,right}

# focus window on click
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Change window gap
alt + {KP_Add,KP_Subtract,minus}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-,-} 10 ))

alt + Left
    bspc config -d focused left_padding $((`bspc config -d focused left_padding` + 10 ))
alt + Right
    bspc config -d focused right_padding $((`bspc config -d focused right_padding` + 10 ))
alt + Up
    bspc config -d focused top_padding $((`bspc config -d focused top_padding` + 10 )) && bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` + 10 ))
alt + Down
    bspc config -d focused top_padding $((`bspc config -d focused top_padding` - 10 )) && bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` - 10 ))

alt + shift + Left
    bspc config -d focused left_padding $((`bspc config -d focused left_padding` - 10 ))
alt + shift + Right
    bspc config -d focused right_padding $((`bspc config -d focused right_padding` - 10 ))

#
# wm independent hotkeys
#

super + shift + Return
    urxvtc

super + r
    dmenu_run -i -fn "-*-lime.se-medium-*-*-*-11-*-*-*-*-*-*-*" -nb "#121212" -nf "#989584" -sb "#121212" -sf "#eddcd3"

super + {m,shift+m,s,u,shift+r}
    ~/.bin/dmenu_{mpd,playlist,solve,umount,remind}

super + c
    xcmenuctrl

super + shift + z
    i3lock -u -i /home/jln/.bg.png -t

super + o
    urxvtc -g 150x60+820+150 -name ncmpcpp -e ncmpcpp

super + {KP_Add,KP_Subtract}
    amixer set Master 2%{+,-}

XF86Audio{Raise,Lower}Volume
    amixer set Master 2%{+,-}

super + KP_Enter
    amixer -q set Master toggle

XF86AudioMute
    amixer -q set Master toggle

super + {x,Left,Right}
    mpc {toggle,prev,next}

super + shift + {KP_Add,KP_Subtract}
    mpc volume {+,-}5

Print
    xfce4-screenshooter

# make sxhkd reload its configuration files:
super + q
    pkill -USR1 -x sxhkd
